                        color: ["rgba(34, 197, 94, 0.4)", "rgba(59, 130, 246, 0.4)",
                                "rgba(220, 38, 38, 0.4)", "rgba(34, 197, 94, 0.3)",
                                "rgba(59, 130, 246, 0.3)", "rgba(220, 38, 38, 0.3)"]
                    }
                };

                const transportLayout = {
                    title: {
                        text: "Transport Efficiency Gap: 50% trips get 5% space, 4% trips get 60% space",
                        font: { size: 16, color: "#374151" }
                    },
