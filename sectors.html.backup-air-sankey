                Plotly.newPlot('transport-sankey', [transportData], transportLayout, {responsive: true});
            }

            // 2B. TRANSPORT INVESTMENT FLOW
            if (document.getElementById('transport-investment-sankey')) {
                const investmentData = {
                    type: "sankey",
                    orientation: "h",
                    node: {
                        pad: 15,
                        thickness: 30,
