                    }
                };

                const investmentLayout = {
                    title: {
                        text: "Investment Misalignment: 70% to roads, 1% to NMT (31% mode share)",
                        font: { size: 16, color: "#374151" }
                    },
                    font: { size: 11, family: "Inter, sans-serif" },
                    margin: { l: 20, r: 20, t: 60, b: 20 },
                    paper_bgcolor: '#fdf2f8'
                };

