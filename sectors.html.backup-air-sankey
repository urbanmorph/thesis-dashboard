    <script>
        // Sector hero content
        const sectorHeroes = {
            energy: { icon: '‚ö°', title: 'Energy Sector', subtitle: 'Demand-side efficiency and circular economy for sustainable energy transition' },
            transport: { icon: 'üöå', title: 'Transport Sector', subtitle: 'Sustainable mobility, active transport, and public transit systems' },
            buildings: { icon: 'üèóÔ∏è', title: 'Buildings Sector', subtitle: 'High-performance buildings, embodied carbon reduction, and net-zero construction' },
            air: { icon: 'üå¨Ô∏è', title: 'Air Quality Sector', subtitle: 'Hyperlocal monitoring, source apportionment, and Open AQ model for India' },
            notf: { icon: 'üèòÔ∏è', title: 'Neighbourhoods of the Future', subtitle: 'Community-led action, ward-level climate data, and integrated sustainability' },
            waste: { icon: 'üóëÔ∏è', title: 'Waste Management Sector', subtitle: 'Circular economy, differentiated city strategies, and zero waste to landfill' },
            water: { icon: 'üíß', title: 'Water Sector', subtitle: 'Water conservation, wastewater treatment, and groundwater management' },
            food: { icon: 'üåæ', title: 'Food Systems Sector', subtitle: 'Cold chain infrastructure, millet revival, and reducing post-harvest losses' },
            biodiversity: { icon: 'üå≥', title: 'Biodiversity Sector', subtitle: 'Natural regeneration, invasive species removal, and wildlife corridor connectivity' }
        };

        // Update hero content
        function updateHero(sectorId) {
            const hero = sectorHeroes[sectorId];
            if (hero) {
                document.getElementById('sector-hero-title').textContent = hero.icon + ' ' + hero.title;
                document.getElementById('sector-hero-subtitle').textContent = hero.subtitle;
            }
        }

        // Tab switching functionality
        document.querySelectorAll('.sector-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                // Update tab styles
                document.querySelectorAll('.sector-tab').forEach(t => {
                    t.classList.remove('bg-dark', 'border-dark', 'text-white');
                    t.classList.add('bg-white', 'border-gray-300', 'text-gray-700', 'hover:border-dark', 'hover:bg-gray-50');
                });
                tab.classList.remove('bg-white', 'border-gray-300', 'text-gray-700', 'hover:border-dark', 'hover:bg-gray-50');
                tab.classList.add('bg-dark', 'border-dark', 'text-white');

                // Update panel visibility
                document.querySelectorAll('.sector-content-panel').forEach(c => {
                    c.classList.add('hidden');
                    c.classList.remove('block');
                });
                const sectorId = tab.dataset.sector;
                const panel = document.getElementById(sectorId);
                panel.classList.remove('hidden');
                panel.classList.add('block');

                updateHero(sectorId);
                history.replaceState(null, null, '#' + sectorId);
            });
        });

        // Handle direct URL with hash
        window.addEventListener('load', () => {
            const hash = window.location.hash.slice(1);
            if (hash) {
                const tab = document.querySelector(`[data-sector="${hash}"]`);
                if (tab) tab.click();
            }
        });
    </script>

    <!-- Plotly Sankey Diagram Renderers -->
    <script>
        // Function to render all Sankey diagrams
